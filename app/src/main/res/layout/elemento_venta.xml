<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/textView">

    <TableLayout
        android:id="@+id/TableLayoutVenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/TableRowVenta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/ItemNombreView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/ItemCantidadView"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ItemNombreView"
                android:layout_toEndOf="@+id/ItemNombreView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/ItemPrecioView"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ItemCantidadView"
                android:layout_toEndOf="@+id/ItemCantidadView" />
        </TableRow>
    </TableLayout>
</RelativeLayout>